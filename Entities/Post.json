{
  "name": "Post",
  "type": "object",
  "properties": {
    "content": {
      "type": "string",
      "description": "Post content"
    },
    "image_url": {
      "type": "string",
      "description": "Optional image URL"
    },
    "latitude": {
      "type": "number",
      "description": "Post location latitude"
    },
    "longitude": {
      "type": "number",
      "description": "Post location longitude"
    },
    "likes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of user emails who liked the post"
    },
    "author_name": {
      "type": "string",
      "description": "Name of post author"
    },
    "author_email": {
      "type": "string",
      "description": "Email of post author"
    },
    "author_avatar": {
      "type": "string",
      "description": "Avatar URL of post author"
    },
    "category": {
      "type": "string",
      "enum": [
        "lost_found_pets",
        "safety_crime",
        "weather_emergencies",
        "local_services",
        "events_meetups",
        "garage_sales",
        "city_updates",
        "general_news",
        "casual_chats"
      ],
      "description": "Post category"
    }
  },
  "required": [
    "content",
    "latitude",
    "longitude"
  ],
  "rls": {
    "read": null,
    "write": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}