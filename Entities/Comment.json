{
  "name": "Comment",
  "type": "object",
  "properties": {
    "post_id": {
      "type": "string",
      "description": "ID of the post being commented on"
    },
    "content": {
      "type": "string",
      "description": "Comment content"
    },
    "author_name": {
      "type": "string",
      "description": "Name of comment author"
    },
    "author_email": {
      "type": "string",
      "description": "Email of comment author"
    },
    "author_avatar": {
      "type": "string",
      "description": "Avatar URL of comment author"
    }
  },
  "required": [
    "post_id",
    "content"
  ],
  "rls": {
    "read": null,
    "write": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}