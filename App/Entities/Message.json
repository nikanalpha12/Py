{
  "name": "Message",
  "type": "object",
  "properties": {
    "content": {
      "type": "string",
      "description": "Message content"
    },
    "latitude": {
      "type": "number",
      "description": "Sender's latitude"
    },
    "longitude": {
      "type": "number",
      "description": "Sender's longitude"
    },
    "sender_name": {
      "type": "string",
      "description": "Name of sender"
    },
    "sender_email": {
      "type": "string",
      "description": "Email of sender"
    },
    "sender_avatar": {
      "type": "string",
      "description": "Avatar URL of sender"
    },
    "channel": {
      "type": "string",
      "enum": [
        "lost_found_pets",
        "safety_crime",
        "weather_emergencies",
        "local_services",
        "events_meetups",
        "garage_sales",
        "city_updates",
        "general_news",
        "casual_chats"
      ],
      "description": "Chat channel/category",
      "default": "casual_chats"
    }
  },
  "required": [
    "content",
    "latitude",
    "longitude"
  ],
  "rls": {
    "read": null,
    "write": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}